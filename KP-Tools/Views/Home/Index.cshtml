		<div class="card bg-light mb-3 mx-auto" style="max-width: 18rem;">
			<div class="card-header">Pick your weapons!</div>
			<div class="card-body">
				<div class="input-group mb-3">
					@Html.DropDownList("firstWeapon", Model.AllWeaponListItems(), "1st Weapon")

				</div>
				<div class="input-group mb-3">
					@Html.DropDownList("secondWeapon", Model.AllWeaponListItems(), "2nd Weapon")
				</div>
				<input type="submit" value="Apply" class="btn btn-primary" /><br />
				<br /><span>@ViewData["userMsg"]</span>
			</div>
		</div>
	}


