				<span asp-validation-for="WeaponProperty" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WeaponHp" class="control-label"></label>
				<input asp-for="WeaponHp" class="form-control" />
				<span asp-validation-for="WeaponHp" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WeaponHpRecovery" class="control-label"></label>
				<input asp-for="WeaponHpRecovery" class="form-control" />
				<span asp-validation-for="WeaponHpRecovery" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WeaponStamina" class="control-label"></label>
				<input asp-for="WeaponStamina" class="form-control" />
				<span asp-validation-for="WeaponStamina" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WeaponStaminaRecovery" class="control-label"></label>
				<input asp-for="WeaponStaminaRecovery" class="form-control" />
				<span asp-validation-for="WeaponStaminaRecovery" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WeaponMana" class="control-label"></label>
				<input asp-for="WeaponMana" class="form-control" />
				<span asp-validation-for="WeaponMana" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WeaponManaRecovery" class="control-label"></label>
				<input asp-for="WeaponManaRecovery" class="form-control" />
				<span asp-validation-for="WeaponManaRecovery" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WeaponRageGeneration" class="control-label"></label>
				<input asp-for="WeaponRageGeneration" class="form-control" />
