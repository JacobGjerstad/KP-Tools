@model KP_Tools.Models.Weapon

@{
	ViewData["Title"] = "Edit " + Model.WeaponName;
}

<h1>Edit @Model.WeaponName</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
