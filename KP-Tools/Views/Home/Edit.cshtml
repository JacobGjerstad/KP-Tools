			<div class="form-group">
				<label asp-for="WeaponMagicDefense" class="control-label"></label>
				<input asp-for="WeaponMagicDefense" class="form-control" />
				<span asp-validation-for="WeaponMagicDefense" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
				<a asp-action="ShowAll" class="btn btn-danger">Cancel</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
